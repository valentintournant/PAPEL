<!-- Scan or add  a ticket -->
<div class="container mt-4 mb-4">
  <div class="row">
    <div class="col-12">
      <div class="form-post">
        <!-- HEADER -->
        <div class="text-center"><h1>New receipt</h1></div>
        <div class="card-line-header-x mb-4"></div>
        <h4><i class="highlighted highlighted-transport mb-2">Scan my receipt 🤩</i></h4>
          <!-- Scan Image form -->
        <%= simple_form_for @receipt do |f| %>
          <%= f.input :photo, as: :file, input_html: { accept: "image/*", capture: "camera"} %>
          <input class="form-control hidden" type="hidden" name="scan" id="receipt_amount", value="true">
          <%= f.submit :submit, class: 'btn-main btn-sm ml-2 mt-2 mb-4'%>
        <% end %>
        <div class="card-line-header-x mb-4"></div>

        <!-- Image form manually -->
        <h4><i class="highlighted highlighted-food mb-2">Write my receipt ✍🏼</i></h4>

          <!-- TODO: (9) pre-remplir le formulaire avec les params récupérés -->
        <%= render 'form', receipt: @receipt %>

      </div>
    </div>
  </div>
</div>
