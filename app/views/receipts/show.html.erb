<div class="container">
  <div class="card-ticket">
    <div class="card-ticket-text">
      <h3> <%= @receipt.store %> </h3>
      <p id="card-ticket-date"> <%= @receipt.date.strftime('%A, %b %d') %> </p>
      <p id="card-ticket-desc"> <%= @receipt.description %></p>
    </div>

    <p> <%= Receipt::CATEGORIES[@receipt.category_name] %> </p>
    <p id="amount"> <%= @receipt.amount %>â‚¬</p>

    <div class="card-ticket-icons">
      <%= link_to edit_receipt_path(@receipt) do %>
        <i class="fas fa-pen" style="font-size: 14px;"></i>
        <% end %>
      <%= link_to receipt_path(@receipt),method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class=" link far fa-trash-alt" style="font-size: 14px;"></i>
      <% end  %>
    </div>
  </div>

  <div id="map" class="mt-2"
     style="width: 100%; height: 350px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
<div class="btn-outline-m" style="margin: 4px 4px 0px 0px;"> <%= link_to 'Back to receipts', profile_path(current_user) %></div>
