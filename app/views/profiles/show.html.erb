<div class="container">
  <h1 class="mt-4"> My
  <i class="highlighted highlighted-transport">PapeL</i>
 </h1>

  <div class="card-user-x mt-5">
    <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
    <div class="card-user-infos">
      <h2> Number of PapeL : </h2>
      <h3><%= @user.receipts.count %></h3>
      <h2 class="mt-1"> <%= @user.name %> </h2>
      <p>See your receipts below!</p>
    </div>
  </div>


  <div class="mt-5">
    <% @user.receipts.each do |receipt| %>
      <%= link_to receipt_path(receipt) do %>
        <div class="card-list-ticket mt-3">
          <div class="card-list-content">
              <div>
                <p><small><%=  receipt.date.strftime('%A, %b %d') %></small></p>
                <p><strong><%=  receipt.store  %></strong></p>
              </div>
              <div>
                <%= link_to receipt_path(receipt),method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="link far fa-trash-alt mt-2" style="font-size: 25px;"></i>
                <% end  %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="mt-5">
      <%= link_to 'Add a receipt', new_receipt_path %>
    </div>
  </div>
</div>
